# Configuración del servidor
PORT=4000
NODE_ENV=development

# Base de datos
DB_URI=mongodb+srv://username:password@cluster.mongodb.net/database?retryWrites=true&w=majority

# APIs principales - REE (Red Eléctrica Española)
REE_API_URL=https://api.esios.ree.es/archives/70/download_json?locale=es
REE_API_KEY=your_ree_api_key_here
REE_BEARER_TOKEN=your_ree_bearer_token_here

# APIs alternativas (para fallback)
ALTERNATIVE_API_URL=https://alternative-api.com/endpoint
ALTERNATIVE_API_KEY=your_alternative_api_key_here
ALTERNATIVE_API_BEARER_TOKEN=your_alternative_bearer_token_here

# Seguridad
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://your-frontend-domain.com

# Tareas Programadas
CRON_SCHEDULE="15 20 * * *"
CRON_RETRY_SCHEDULE="15 23 * * *"
FALLBACK_RETRY_DELAY=30
MAX_RETRIES=3
TZ="Europe/Madrid"

# Cache y performance
CACHE_TTL_HOURS=1
LOG_LEVEL=info